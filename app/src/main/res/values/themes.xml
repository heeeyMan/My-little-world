<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeneralStyle" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_300</item>
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/beige_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/nunito_regular</item>

        <item name="colorControlNormal">@color/yellow_600</item>
        <item name="colorControlActivated">@color/yellow_300</item>
        <item name="colorControlHighlight">@color/yellow_300</item>
    </style>

    <style name="Theme.GeneralStyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GeneralStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GeneralStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.GeneralActivity.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Toolbar">
        <item name="searchViewStyle">@style/searchStyle</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorHint">@color/yellow_600</item>
        <item name="homeAsUpIndicator">@drawable/arrow_back</item>
    </style>

    <style name="titleToolbar">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow_600</item>
    </style>
</resources>